rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow authenticated users full access to all app data
    match /artifacts/{appId}/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Also allow reading the config for first-user check (even without auth)
    match /artifacts/{appId}/public/config {
      allow read: if true;
    }
  }
}