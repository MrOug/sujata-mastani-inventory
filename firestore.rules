rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }

    // Returns true if the user has the 'admin' role
    function isAdmin() {
      return isAuthenticated() && get(/databases/$(database)/documents/artifacts/$(appId)/users/$(request.auth.uid)/user_config/profile).data.role == 'admin';
    }
    
    // --- Data Rules ---
    match /artifacts/{appId} {
      
      // Public data is readable by anyone, but only writable by admins
      // This allows the initial "is setup complete?" check to work without login
      match /public/{document=**} {
        allow read: if true;
        allow write: if isAdmin();
      }
      
      // User-specific data
      match /users/{userId}/{document=**} {
        // Users can only read and write their OWN data.
        allow read, write: if request.auth.uid == userId;
      }
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}